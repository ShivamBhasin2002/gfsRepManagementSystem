<%- include("../partials/header") %>
	
	<div class="ui main text container segment">
		<div class="ui center aligned huge header">EDIT RECORD: <%=record.name%></div>
		<form class="ui huge form" action="/records/<%=record.admno%>?_meth=PUT" method="POST">
			<div class="two fields">
				<div class="field">
					<label>Admission N0.</label>
					<input type="number" name="record[admno]" required value="<%=record.admno%>">
				</div>
				<div class="field">
					<label>Full Name</label>
					<input type="text" name="record[name]" required value="<%=record.name%>">
				</div>
			</div>
			<div class="ui field">
				<label>Father's Name</label>
				<input type="text" placeholder="Father's Name" name="record[fname]" required value="<%=record.fname%>">
			</div>
			<div class="two fields">
				<div class="field">
					<label>Class</label>
					<input type="number" name="record[std]" required value="<%=record.std%>">
				</div>
				<div class="field">
					<label>Section</label>
					<input type="text" name="record[sec]" required value="<%=record.sec%>" class="sec">
				</div>
			</div>
			<div class="two fields">
				<label style="margin-right: 20px; margin-left: 10px">Subjects</label>
				<select name="record[subjects]" class="ui search selection dropdown" id="multi-select" multiple="">
					<option value="">Subjects</option>
					<% subjects.forEach( sub => {%>
					<option value="<%=sub%>" <%if(record.subjects.includes(sub)){%>selected<%}%>><%=sub%></option>
					<%})%>
				</select>
			</div>
			<button class="ui blue submit button">Submit</button>
		</form>
		<form action="/records/<%=record.admno%>?_meth=DELETE" method="POST">
			<button class="ui basic red submit button">Delete</button>
		</form>
	</div>

<%- include("../partials/footer") %>